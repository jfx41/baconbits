#!/bin/bash

# Directory structure to create
BACONBITS_DIRS="daq rules src versions"

# If these are already set a user is configuring them locally
if [ -z "$BACONBITS_DIR" ]
then
	BACONBITS_DIR="$HOME/.baconbits"
elif [ -z "$BACONBITS_BIN" ]
then
	BACONBITS_BIN="/usr/bin/baconbits"
elif [ -z "$BACONBITS_SHARE" ]
then
	BACONBITS_SHARE="/usr/share/baconbits"
elif [ -z "$BACONBITS_LIB" ]
then
	BACONBITS_LIB="/usr/share/baconbits/lib"
elif [ -z "$BACONBITS_SNORT_OPTS" ]
then
	BACONBITS_SNORT_OPTS="--enable-sourcefire --enable-ipv6 --enable-gre --enable-mpls --enable-targetbased --enable-decoder-preprocessor-rules --enable-ppm --enable-perfprofiling --enable-zlib --enable-active-response --enable-normalizer --enable-reload --enable-react --enable-flexresp3 --enable-debug --enable-debug-msgs"
elif [ -z "$BACONBITS_DAQ_OPTS" ]
then
	BACONBITS_DAQ_OPTS=""

fi

# EOF
